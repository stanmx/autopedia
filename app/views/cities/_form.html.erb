      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <h4><%= pluralize(@city.errors.count, "error") %> no permiten que esta Ciudad sea creada:</h4>
      <br />
      <ul>
      <% @city.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label 'Estado' %>
