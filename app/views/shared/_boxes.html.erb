<div id="box1" class="optionbox">
	<header>
		<h3>Marcas disponibles</h3>
		<h5><%= link_to image_tag('close-optionbox.png', :alt => 'Cerrar'), '#', :class => 'cerrar' %></h5>
	</header>
	<section class="infobox">
		<ul>
			<% @brands.each do |brand| %>
                <li><%= link_to brand.title, page_path('autos_en_venta', :search => brand.title) %></li>
            <% end %>
		</ul>
	</section>
</div><!-- end /.optionbox -->

<div id="box2" class="optionbox">
	<header>
		<h3>Modelos disponibles</h3>
		<h5><%= link_to image_tag('close-optionbox.png', :alt => 'Cerrar'), '#', :class => 'cerrar' %></h5>
	</header>
