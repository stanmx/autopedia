<div id="box3" class="optionbox">
	<header>
		<h3>Años disponibles</h3>
		<h5><%= link_to image_tag('close-optionbox.png', :alt => 'Cerrar'), '#', :class => 'cerrar' %></h5>
	</header>
	<section class="infobox">
		<%= form_for page_path('autos_en_venta'), :method => :get do %>
			<p>
				<label>Mínimo</label>
				<%= select_tag :fyear, options_for_select(Car.all.map &:year) %>
			</p>
			<p>
				<label>Máximo</label>
				<%= select_tag :tyear, options_for_select(Car.all.map &:year) %>
			</p>
			<p>
				<%= submit_tag "Buscar", :name => nil %>
			</p>
		</form>
		<% end %>
	</section>
</div><!-- end /.optionbox -->

