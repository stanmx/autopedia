<%= form_for(@category, :html => { :multipart => true } ) do |f| %>
  <% if @category.errors.any? %>
    <div id="error_explanation" class="alert alert-block">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <h4><%= pluralize(@category.errors.count, "error") %> no permite que esta Categoria sea creada:</h4>
      <br />
      <ul>
      <% @category.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label 'Titulo' %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label 'DescripciÃ³n' %>
    <%= f.text_area :description, :rows => 6 %>
  </div>
  <div class="field infile">
    <% if @category.icon? %>
      <%= link_to image_tag(f.object.icon.url(:thumb)), f.object.icon.url(:original) %>
      <%= f.check_box(:delete_icon) %>
    <% else %>
      <span class="btn btn-success fileinput-button">
      <em class="icon-picture icon-white"></em>
      <span>Adjuntar imagen...</span>
        <%= f.file_field :icon %>
      </span>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit :class => "btn btn-primary"  %>
  </div>
<% end %>
