<h1>Listing models</h1>

<table>
  <tr>
    <th>Brand</th>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @models.each do |model| %>
  <tr>
    <td><%= image_tag model.brand.logo.url(:thumb) %></td>
    <td><%= model.brand.title %></td>
    <td><%= model.title %></td>
    <td><%= model.description %></td>
    <td><%= link_to 'Show', model %></td>
    <td><%= link_to 'Edit', edit_model_path(model) %></td>
    <td><%= link_to 'Destroy', model, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

