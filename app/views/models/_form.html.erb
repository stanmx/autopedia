      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <h4><%= pluralize(@model.errors.count, "error") %> no permite que este Modelo sea creado:</h4>
      <br />
      <ul>
      <% @model.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
