<div class="page-header">
  <h2>Revista #<%= @magazine.number %></h2>
</div>

<% for cover in @magazine.covers %> 
  <%= image_tag(cover.cover.url(:large), :alt => @magazine.title, :border => 0) %>
<% end %>  

<p>
	<b>Titulo:</b>
	<%= @magazine.title %>
</p>

<p>
	<b>Descripci√≥n:</b>
	<%= @magazine.description %>
</p>

<p>
	<%= link_to 'Descargar', @magazine.covers.first.cover.url(:original), :target => '_blank' %>
</p>

<div class="form-actions">
  <%= link_to 'Regresar', magazines_path, :class => "btn" %>
  <%= link_to 'Editar', edit_magazine_path(@magazine), :class => "btn" %>
