<div class="page-header">
  <h2>Lista de Paises</h2>
</div>

<table class="table table-bordered table-striped">
  <thead>
  <tr>
      <th>Titulo</th>
      <th>Descripción</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>
  <tbody>
  <% if @countries.empty? %>
    <tr>
      <td colspan="5">Aun sin Negocios.</td>
    </tr>
    <% else %>
      <% @countries.each do |country| %>
        <tr>
          <td><%= country.title %></td>
          <td><%= country.description %></td>
          <td><%= link_to 'Mostrar', country %></td>
          <td><%= link_to 'Editar', edit_country_path(country) %></td>
          <td><%= link_to 'Eliminar', country, :method => :delete, :data => { :confirm => '¿Estas seguro?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%= link_to 'Nuevo Pais', new_country_path, :class => "btn btn-primary" %>
