<%= form_for(@brand, :html => { :multipart => true }) do |f| %>
  <% if @brand.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@brand.errors.count, "error") %> prohibited this brand from being saved:</h2>

      <ul>
      <% @brand.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :logo %><br />
    <% if f.object.new_record? %>
      Nuevo
      <%= f.file_field :logo %>
    <% elsif f.object.nil? %>
      Usado
      <%= f.file_field :logo %>
    <% else %>
      Usado y dado
      <%= link_to image_tag(f.object.logo.url(:thumb)), f.object.logo.url(:original) %>
      <%= f.check_box :delete_logo %>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
