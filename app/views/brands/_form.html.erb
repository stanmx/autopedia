<%= form_for(@brand, :html => { :multipart => true, :id => "fileupload" }) do |f| %>
  <% if @brand.errors.any? %>
    <div id="error_explanation" class="alert alert-block">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <h4><%= pluralize(@brand.errors.count, "error") %> no permite que esta Marca sea creada:</h4>
      <br />
      <ul>
      <% @brand.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label 'Titulo' %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label 'DescripciÃ³n' %>
    <%= f.text_area :description, :rows => 6 %>
  </div>
  <div class="field">
    <% if @brand.logo? %>
      <%= link_to image_tag(f.object.logo.url(:thumb)), f.object.logo.url(:original) %>
      <%= f.check_box(:delete_logo) %>
    <% else %>
      <span class="btn btn-success fileinput-button">
      <em class="icon-picture icon-white"></em>
      <span>Adjuntar imagen...</span>
        <%= f.file_field :logo %>
      </span>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit :class => "btn btn-primary" %>
  </div>
<% end %>