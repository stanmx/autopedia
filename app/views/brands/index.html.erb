<div class="page-header">
  <h2>Lista de Marcas</h2>
</div>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Descripción</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% if @brands.empty? %>
    <tr>
      <td colspan="5">Aun sin Marcas.</td>
    </tr>
    <% else %>
      <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.title %></td>
        <td><%= brand.description %></td>
        <td><%= link_to 'Mostrar', brand %></td>
        <td><%= link_to 'Editar', edit_brand_path(brand) %></td>
        <td><%= link_to 'Eliminar', brand, :method => :delete, :data => { :confirm => '¿Estas seguro?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
  
</table>

<%= link_to 'Nueva Marca', new_brand_path, :class => "btn btn-primary" %>
