<% title "Contacto" %>
<div id="sitemap">

	<div class="center">
		<p>Inicio &rsaquo; Contacto</p>
	</div><!-- end /.center -->

</div><!-- end /#sitemap -->

<div id="content">

	<div id="text" class="others">

		<h2>Contacto Autopedia&reg;</h2>
		<h4>Para mantenerte en contacto y recibir las mejores promociones que Autopedia.mx tiene para ti, llena el siguiente formulario y en breve nos pondremos en contacto para responder tus preguntas o comentarios.</h4>

		<% if flash[:notice] %>
    		<div class="notice"><%= flash[:notice] %></div>
  		<% end %>

		<section id="contact">
			<%= form_for @message, :url => page_path("contacto"), :method => :post do |form| %>
				<fieldset>
					<p>
						<%= form.label 'Nombre' %>
      					<%= form.text_field :name, :class => 'input300' %>
					</p>
					<p>
						<%= form.label 'Teléfono' %>
      					<%= form.text_field :phone, :class => 'input300' %>
					</p>
					<p>
						<%= form.label 'Correo Eléctronico' %>
      					<%= form.text_field :email, :class => 'input300' %>
					</p>
				</fieldset>
				<fieldset>
					<p>
						<%= form.label 'Mensaje' %>
      					<%= form.text_area :body %>
					</p>
				</fieldset>
				<p>
					<%= form.submit "Enviar", :class => 'inputsubmit' %>
				</p>
			<% end %>
		</section><!-- end /#contact -->

	</div><!-- end /#text -->

	<div id="sidebar">

		<%= render 'shared/bannerside' %>
		<%= render 'shared/searchside' %>

	</div><!-- end /#sidebar -->

	<%= render 'shared/middlebanners' %>

</div><!-- end /#content -->