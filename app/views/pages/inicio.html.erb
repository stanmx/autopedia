<% title "El portal especializado en automoviles" %>
<div id="sitemap">

	<div class="center">
		<p>Inicio</p>
	</div><!-- end /.center -->

</div><!-- end /#sitemap -->

<div id="content">

	<div id="introduction">

		<section id="video">
      		<%= @videos.video.html_safe %>
		</section><!-- end /#video -->

		<section id="introbanners">
			<section>
				<ul class="rslides">
					<% Banner.find_by_width_and_height_and_section(450,150,'introduccion_01') do |b| %>
			    		<% b.promotions.each do |p| %>
				  			<li><%= link_to image_tag(p.promotion.url(:original)), p.address %></li>
						<% end %>
		      		<% end %>
				</ul>
			</section>
			<section>
				<ul class="rslides">
					<% Banner.find_by_width_and_height_and_section(450,150,'introduccion_02') do |b| %>
			    		<% b.promotions.each do |p| %>
				  			<li><%= link_to image_tag(p.promotion.url(:original)), p.address %></li>
						<% end %>
		      		<% end %>
			</section>
		</section><!-- end /#introbanners -->

	</div><!-- end /#introduction -->

