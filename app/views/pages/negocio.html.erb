<% title "Directorio" %>
<div id="sitemap">

  <div class="center">
    <p>Inicio &rsaquo; Directorio &rsaquo; <%= @company.category.title %> &rsaquo; <%= @company.city.id %></p>
  </div><!-- end /.center -->

</div><!-- end /#sitemap -->

<div id="content">

  <p id="notice"><%= notice %></p>

  <div id="business">


    <section id="bslide">
      <ul class="rslides">
        <% for picture in @company.pictures %> 
        <li><%= image_tag picture.picture.url(:large), :alt => @company.name, :border => 0 %></li>
        <% end %>  
      </ul>
    </section><!-- end /#bslide -->

    <section id="bdetails">
      <ul>
        <li><span>Dirección:</span> <%= @company.address %></li>
        <!--<li class="two"><span>Ciudad:</span> <%= @company.city.title %></li>
        <li><span>Garantía:</span> <%= humanize_bool(@company.warranty) %></li>-->
        <li class="two"><span>Teléfono:</span> <%= @company.phone %></li>
        <li><span>Horario:</span> <%= @company.schedule %></li>
        <li class="two"><span>Correo Electrónico:</span> <%= @company.email %></li>
        <li><span>Web:</span> <%= @company.web %></li>
      </ul>
    </section><!-- end /#details -->

    <section id="bdescription">
      <h3>Acerca de...</h3>
      <p><%= @company.about %></p>
      <h3>Misión</h3>
      <p><%= @company.mision %></p>
      <h3>Visión</h3>
      <p><%= @company.vision %></p>
    </section><!-- end /#bdescription -->

  </div><!-- end /#business -->

  <div id="sidebar">

    <section id="blogo">
      <%= image_tag @company.pictures.first.picture.url(:medium) %>
    </section><!-- end /#blogo -->

    <section id="bname">
      <h3><%= @company.name %></h3>
      <h5>ID <%= @company.id %></h5>
    </section>

    <section id="bmap">
      <%= image_tag "http://maps.google.com/maps/api/staticmap?size=220x220&sensor=false&zoom=16&markers=#{@company.latitude}%2C#{@company.longitude}" %>
    </section><!-- end /#bmap -->

    <section id="feed">
      <h3>Social Media Feed</h3>
      <p>Próximamente.</p>
    </section>

  </div><!-- end /#businessbar -->

  <div id="middlebanners">
    <ul>
      <li><%= link_to image_tag('460x100.jpg', :alt => '460x100'), '#', :target => '_blank' %></li>
      <li><%= link_to image_tag('460x100.jpg', :alt => '460x100'), '#', :target => '_blank' %></li>
    </ul>
  </div><!-- end /#middlebanners -->

</div><!-- end /#content -->
