<h1>Listing companies</h1>

<table>
  <tr>
    <th>Pictures</th>
    <th>Category</th>
    <th>City</th>
    <th>Name</th>
    <th>Warranty</th>
    <th>Address</th>
    <th>Phone</th>
    <th>Schedule</th>
    <th>Email</th>
    <th>Web</th>
    <th>About</th>
    <th>Mision</th>
    <th>Vision</th>
    <th>Location</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @companies.each do |company| %>
  <tr>
    <td><%= image_tag company.pictures.first.picture.url(:thumb) %></td>
    <td><%= company.category.title %></td>
    <td><%= company.city.title %></td>
    <td><%= company.name %></td>
    <td><%= company.warranty %></td>
    <td><%= company.address %></td>
    <td><%= company.phone %></td>
    <td><%= company.schedule %></td>
    <td><%= company.email %></td>
    <td><%= company.web %></td>
    <td><%= company.about %></td>
    <td><%= company.mision %></td>
    <td><%= company.vision %></td>
    <td><%= company.location %></td>
    <td><%= link_to 'Show', company %></td>
    <td><%= link_to 'Edit', edit_company_path(company) %></td>
    <td><%= link_to 'Destroy', company, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

